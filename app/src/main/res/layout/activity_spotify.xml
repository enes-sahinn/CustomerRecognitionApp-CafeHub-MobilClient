<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".view.currentCafe.SpotifyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E1D9D9"
        android:layout_gravity="center"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cafehub_color_logo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/ivSpotifyLogo"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:src="@drawable/spotify_logo_high_res"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="40dp"
        app:layout_constraintDimensionRatio="2362:709"/>

    <TextView
        android:id="@+id/tvSendSongDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Oynatma sırasına nasıl müzik ekleyebilirim? \n\n1. Spotfiy uygulamasını aç. \n2. Eklemek istediğin şarkının yanındaki üç noktaya tıkla. \n3. Sırasıyla 'Paylaş' ve 'Bağlantıyı kopyala' seçeneklerini seç.butonuna bas. \n4. Kopyaladığın bağlantıyı aşağıdaki kutucuğa yapıştırıp 'Şarkıyı gönder' e bas."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSpotifyLogo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSongUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvSendSongDescription"
        app:layout_constraintTop_toBottomOf="@id/tvSendSongDescription"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@id/tvSendSongDescription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextSongUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şarkı bağlantısını yapıştır" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/sendTheSongButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şarkıyı Gönder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tilSongUrl" />

</androidx.constraintlayout.widget.ConstraintLayout>